page {
  background: #f3f4f1;
  color: #1f1f1f;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
}

.screen {
  min-height: 100vh;
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border: 2rpx solid #e8e8e5;
  border-radius: 20rpx;
  box-sizing: border-box;
}

.shadow-soft {
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.06);
}

.positive {
  color: #05904d;
}

.negative {
  color: #c7262f;
}

.muted {
  color: #777777;
}
